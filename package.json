{
  "name": "rcon-shell",
  "version": "0.0.1-alpha.0",
  "description": "hlds rcon shell client",
  "repository": "https://github.com/leonardodino/rcon-shell",
  "author": "Leonardo Dino",
  "license": "MIT",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "microbundle build -f cjs -t node --external readline,dgram,buffer,events --strict --no-sourcemap",
    "postbuild": "cp ./src/event-emitter.d.ts ./dist",
    "format": "prettier . --write",
    "lint": "prettier . --check && tsc"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "node": "10"
          }
        }
      ]
    ]
  },
  "devDependencies": {
    "@types/node": "^14.0.1",
    "microbundle": "^0.12.0",
    "prettier": "^2.0.5",
    "typescript": "^3.9.2"
  }
}