{
  "name": "rcon-shell",
  "version": "0.0.1-alpha.0",
  "description": "hlds rcon shell client",
  "repository": "https://github.com/leonardodino/rcon-shell",
  "author": "Leonardo Dino",
  "license": "MIT",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "prebuild": "rm -r ./dist",
    "build": "rollup -c rollup.config.ts",
    "postbuild": "tsc && cp ./src/event-emitter.d.ts ./dist",
    "prepare": "$npm_execpath run build",
    "format": "prettier . --write",
    "lint": "prettier . --check"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript",
      "@babel/preset-modules"
    ],
    "plugins": [
      "@babel/plugin-proposal-optional-chaining"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-optional-chaining": "^7.9.0",
    "@babel/preset-modules": "^0.1.3",
    "@babel/preset-typescript": "^7.9.0",
    "@rollup/plugin-babel": "^5.0.2",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@types/node": "^14.0.1",
    "prettier": "^2.0.5",
    "rollup": "^2.10.9",
    "rollup-plugin-filesize": "^9.0.0",
    "rollup-plugin-preserve-shebang": "^1.0.0",
    "rollup-plugin-terser": "^6.1.0",
    "typescript": "^3.9.2"
  }
}
