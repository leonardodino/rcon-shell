{
  "name": "rcon-shell",
  "version": "0.0.3-alpha.0",
  "description": "hlds rcon shell client",
  "repository": "https://github.com/leonardodino/rcon-shell",
  "author": "Leonardo Dino",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/esm.js",
  "bin": "bin/rcon-shell",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "prebuild": "rm -rf ./dist ./bin",
    "build": "rollup -c rollup.config.ts && tsc",
    "postbuild": "cp ./src/event-emitter.d.ts ./dist",
    "prepublishOnly": "$npm_execpath run build",
    "format": "prettier . --write",
    "lint": "prettier . --check"
  },
  "babel": {
    "plugins": [
      "@babel/transform-typescript",
      "@babel/proposal-optional-chaining"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-optional-chaining": "^7.9.0",
    "@babel/plugin-transform-typescript": "^7.9.6",
    "@rollup/plugin-babel": "^5.0.2",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@types/node": "^14.0.5",
    "prettier": "^2.0.5",
    "rollup": "^2.10.9",
    "rollup-plugin-filesize": "^9.0.0",
    "rollup-plugin-preserve-shebang": "^1.0.0",
    "rollup-plugin-terser": "^6.1.0",
    "typescript": "^3.9.3"
  }
}